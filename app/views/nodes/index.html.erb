<h1>Listing nodes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Provider</th>
    <th>Input type</th>
    <th>Output type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%= node.name %></td>
    <td><%= node.provider_id %></td>
    <td><%= node.input_type %></td>
    <td><%= node.output_type %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

